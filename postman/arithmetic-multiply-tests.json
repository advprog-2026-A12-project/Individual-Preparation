{
  "info": {
    "name": "Arithmetic Multiply API Tests",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Multiply Success - Status 200",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Multiply result is correct\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.result).to.eql(50.0);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"operand1\": 10,\n  \"operand2\": 5\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "http://localhost:8080/api/arithmetic/multiply",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "arithmetic", "multiply"]
        }
      }
    },
    {
      "name": "Multiply Error - Invalid Input (400)",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});"
            ]
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"operand1\": 10,\n  \"operand2\": \"abc\"\n}",
          "options": { "raw": { "language": "json" } }
        },
        "url": {
          "raw": "http://localhost:8080/api/arithmetic/multiply",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "arithmetic", "multiply"]
        }
      }
    }
  ]
}
