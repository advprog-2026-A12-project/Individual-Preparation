  "item": [
    {
      "name": "testStatus200_StandardVectors",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response time is less than 200ms\", function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(200);",
              "});",
              "",
              "pm.test(\"Response is an array\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.be.an('array');",
              "});",
              "",
              "pm.test(\"Array length is correct\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.lengthOf(3);",
              "});",
              "",
              "pm.test(\"Vector addition result is correct\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json[0]).to.eql(5.0);",
              "    pm.expect(json[1]).to.eql(7.0);",
              "    pm.expect(json[2]).to.eql(9.0);",
              "});",
              ""
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"v1\": [1.0, 2.0, 3.0],\n  \"v2\": [4.0, 5.0, 6.0]\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8080/api/vector/add",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "vector", "add"]
        }
      },
      "response": []
