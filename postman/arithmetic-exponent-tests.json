  "item": [
    {
      "name": "testStatus200_PositiveExponent",
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response time is less than 200ms\", function () {",
              "    pm.expect(pm.response.responseTime).to.be.below(200);",
              "});",
              "",
              "pm.test(\"Exponent result is correct (2^3 = 8)\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.result).to.eql(8.0);",
              "});",
              "",
              "pm.test(\"Result is a number\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.result).to.be.a('number');",
              "});",
              ""
            ],
            "type": "text/javascript"
          }
        }
      ],
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"base\": 2.0,\n  \"exponent\": 3\n}",
          "options": {
            "raw": {
              "language": "json"
            }
          }
        },
        "url": {
          "raw": "http://localhost:8080/api/arithmetic/exponent",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8080",
          "path": ["api", "arithmetic", "exponent"]
        }
      },
      "response": []
    },
